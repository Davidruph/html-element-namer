{
  "name": "html-element-namer",
  "displayName": "HTML Element Namer",
  "description": "Auto-generate unique class/id names for HTML elements and provide CSS class/id autocomplete",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:jsx",
    "onLanguage:tsx",
    "onLanguage:vue",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "html-element-namer.generateUniqueName",
        "title": "Generate Unique Class/ID Name",
        "category": "HTML Element Namer"
      },
      {
        "command": "html-element-namer.refreshScan",
        "title": "Refresh Class/ID Scan",
        "category": "HTML Element Namer"
      }
    ],
    "keybindings": [
      {
        "command": "html-element-namer.generateUniqueName",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "editorLangId == html || editorLangId == jsx || editorLangId == tsx || editorLangId == vue"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
